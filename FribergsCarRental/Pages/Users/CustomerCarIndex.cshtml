@page
@model FribergsCarRental.Pages.Users.CustomerCarIndexModel

@{
    ViewData["Title"] = "CustomerCarIndex";
}

<h1>Bokningsbara bilar</h1>


<table class="table">
    <thead>
        <tr><th></th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Model)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cars)
        {
            <tr>
                <td>
                    <img src="@item.PictureURL" alt="Picture of @item.Model" class="img-thumbnail" width="200"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>             
                <td>

                    <a asp-page="/Bookings/CreateBooking" asp-route-id="@item.CarId" class="btn">Boka</a>                    
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
