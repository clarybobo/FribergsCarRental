@page
@model FribergsCarRental.Pages.Users.LogInModel
@{
    ViewData["Title"] = "LogIn";
}


<h1>Logga in</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
     <input type="hidden" asp-for="TheUser.TheUserId" />
        <label asp-for="TheUser.Email" class="control-label">E-mail</label>
        <input asp-for="TheUser.Email" class="form-control" />
        <span asp-validation-for="TheUser.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TheUser.Password" class="control-label">Lösenord</label>
        <input asp-for="TheUser.Password" type="password" class="form-control" />
        <span asp-validation-for="TheUser.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Logga in</button>
</form>

        <h1>Skapa nytt konto</h1>
        <a asp-page="/Users/CreateUser">Skapa konto</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
