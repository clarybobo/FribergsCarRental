@page
@model FribergsCarRental.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "DeleteUser";
}


<h3>Är du säker på att du vill ta bort användaren?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TheUser.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TheUser.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TheUser.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TheUser.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TheUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TheUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TheUser.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TheUser.Password)
        </dd>       
    </dl>

    <form method="post">
        <input type="hidden" asp-for="TheUser.TheUserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
